-# Header
.header-row
  .avatar-and-email
    .avatar 
      - if @user.avatar_file_name
        = image_tag @user.avatar.url(:thumb)
    .user-email
      = @user.email
  .add-photo-and-logout-buttons
    .add-photo-button
      = link_to 'Logout', log_out_path,
        class: ['btn', 'btn-danger', 'logout_btn']
    .logout-button
      = link_to 'Add Photo', new_user_photo_path(@user),
        class: ['btn', 'btn-success', 'add_photo_btn']

-# User Photos    
.user-photos-area
  .photos-area-title
    = "User Photos"
  .horizontail-line
  .photos
    - @user.photos.each do |photo|
      .photo-area
        .photo
          = image_tag photo.image.url(:medium)
        .photo-title
          "Title goes here"
        .photo-form
          = form_for @tag do |f|
            = f.hidden_field :photo_id, value: photo.id
            = f.collection_select :user_id, @users, :id, :email
            = f.submit "Tag User"
          - photo.tags.each do |tag|
            = tag.user.email
